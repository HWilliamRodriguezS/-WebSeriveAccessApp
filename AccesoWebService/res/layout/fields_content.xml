<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" 
    android:stretchColumns="1">
    
    <TableRow android:layout_weight="4"
        	  android:layout_height="wrap_content"
        	  android:layout_width="wrap_content" >
        
        <TextView android:text="@string/DNI"
            	  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1" />
        
        <EditText android:id="@+id/dni"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2.5"
                  android:hint="@string/DNI" />
    </TableRow>
    
     <TableRow  android:layout_weight="4"
        	  	android:layout_height="wrap_content"
        	    android:layout_width="wrap_content">
        
        <TextView android:text="@string/name"
            	  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  />
        
        <EditText android:id="@+id/name"
            	  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2.5"
                  android:hint="@string/name"
                  />
    </TableRow>
    
      <TableRow android:layout_weight="4"
        	  	android:layout_height="wrap_content"
        	    android:layout_width="wrap_content"  >
        
        <TextView android:text="@string/last_name"
            	  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  />
        
        <EditText android:id="@+id/last_name"
            	  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2.5"
                  android:hint="@string/last_name"
                  />
    </TableRow>
    
 	<TableRow android:layout_weight="4"
        	  android:layout_height="wrap_content"
        	  android:layout_width="wrap_content">
        
        <TextView android:text="@string/address"
            	  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  />
        
        <EditText android:id="@+id/address"
            	  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2.5"
                  android:hint="@string/address"
                  />
    </TableRow>   
	
 	<TableRow android:layout_weight="4"
        	  android:layout_height="wrap_content"
        	  android:layout_width="wrap_content">
        
        <TextView android:text="@string/tel"
            	  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  />
        
        <EditText android:id="@+id/tel"
            	  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2.5"
                  android:hint="@string/tel"
                  />
    </TableRow>
    
 	<TableRow android:layout_weight="4"
        	  android:layout_height="wrap_content"
        	  android:layout_width="wrap_content">
        
        <TextView android:text="@string/team"
            	  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  />
        
        <EditText android:id="@+id/team"
            	  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2.5"
                  android:hint="@string/team"
                  />
    </TableRow>
 	
</TableLayout>
